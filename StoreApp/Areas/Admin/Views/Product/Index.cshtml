@model IEnumerable<Product>


<div class="text-center my-3">
    <h6 class="display-6">
        Products
    </h6>
</div>

<div class="d-flex justify-content-end">
    <a class="btn btn-outline-success"
       asp-controller="Product"
       asp-action="Create"
       asp-area="Admin"
       tool-message="Create a new product">
        <i class="fa fa-plus-circle"></i>
    </a>
</div>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Image</th>
        <th>Price</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.ProductId</td>
            <td>@product.ProductName</td>
            <td>
                <img class="rounded border border-light" src="@product.ImageUrl" alt="@product.ProductName" width="60"/>
            </td>
            <td>@product.Price.ToString("C")</td>
            <td>
                <div class="btn-group">
                    <a class="btn btn-warning"
                       asp-action="Update"
                       asp-route-id="@product.ProductId"
                       tool-message="Edit this product.">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a class="btn btn-info" target="_blank"
                       asp-area=""
                       asp-controller="Product"
                       asp-action="Get"
                       asp-route-id="@product.ProductId"
                       tool-message="View this product.">
                        <i class="fa fa-search"></i>
                    </a>
                    <a class="btn btn-danger"
                       asp-action="Delete"
                       asp-route-id="@product.ProductId"
                       tool-message="Delete this product.">
                        <i class="fa fa-remove"></i>
                    </a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>

@section js
{
    <script type="text/javascript">
       $(document).ready(function() {
           $('[data-bs-toggle="tooltip"]').tooltip();
       });
   </script>
}
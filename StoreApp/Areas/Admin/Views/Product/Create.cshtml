@model ProductDtoForInsertion

<div class="text-center my-3">
    <h6 class="display-6">
        Create
    </h6>
</div>

<partial name="_ValidationSummaryPartial"/>

<div class="card p-4">
    <div class="row">
        <div class="col-6">
            <form method="post" asp-action="Create" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label">Category</label>
                    <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories">
                        <optgroup label="Select Category"></optgroup>
                    </select>
                </div>
                <div class="mb-3">
                    <label asp-for="ProductName" class="form-label">Product Name</label>
                    <input class="form-control" asp-for="ProductName">
                </div>
                <div class="mb-3">
                    <label asp-for="Summary" class="form-label">Summary</label>
                    <input class="form-control" asp-for="Summary">
                </div>
                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Price</label>
                    <input class="form-control" asp-for="Price">
                </div>
                <div class="mb-3">
                    <label asp-for="ImageUrl">Select Image</label>
                    <input class="form-control" type="file" name="file">
                </div>
                <div class="mb-3 btn-group d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i>
                        Save
                    </button>
                    <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Index">
                        <i class="fa fa-list"></i>
                        Products
                    </a>
                </div>
            </form>
        </div>
        <div class="col-6">
            <img src="" alt=""/>
        </div>
    </div>
</div>
@model ResetPasswordDto

<div class="text-center my-3">
    <h6 class="display-6">
        Reset Password (@Model.UserName)
    </h6>
</div>

<partial name="_ValidationSummaryPartial"/>

<div class="card p-4">
    <form method="post" asp-action="ResetPassword" enctype="multipart/form-data">
        <div class="row">
            <div class="col-6">
                <input hidden class="form-control" asp-for="UserName">
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input class="form-control" asp-for="Password">
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input class="form-control" asp-for="ConfirmPassword">
                </div>
                <div class="mb-3 btn-group d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i>
                        Save
                    </button>
                    <a class="btn btn-outline-primary" asp-controller="User" asp-action="Index">
                        <i class="fa fa-list"></i>
                        Users
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>
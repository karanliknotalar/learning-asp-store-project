@model Order

@{
    ViewBag.Title = "Checkout Orders";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert" asp-validation-summary="All">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form asp-action="Checkout" method="post">
    <div class="my-3">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name"/>
    </div>
    <div class="my-3">
        <label asp-for="Adress1"></label>
        <input class="form-control" asp-for="Adress1"/>
    </div>
    <div class="my-3">
        <label asp-for="Adress2"></label>
        <input class="form-control" asp-for="Adress2"/>
    </div>
    <div class="my-3">
        <label asp-for="Adress3"></label>
        <input class="form-control" asp-for="Adress3"/>
    </div>
    <div class="my-3">
        <label asp-for="City"></label>
        <input class="form-control" asp-for="City"/>
    </div>
    <div class="my-3">
        <input asp-for="GiftWrap"/>
        <label >Gift wrap these items.</label>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Complete Order</button>
    </div>
</form>
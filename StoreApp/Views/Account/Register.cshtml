@model RegisterDto

@section css
{
    <style>
        .form-signin {
          width: 100%;
          max-width: 35rem;
          padding: 2rem;
          margin: auto;
        }
    </style>
}

<div class="text-center my-2">
    <div class="display-6">
        <i class="fa-solid fa-user-plus p-3 text-white bg-secondary rounded"></i>
    </div>
</div>

<div class="form-signin">
    <partial name="_ValidationSummaryPartial"/>
    <form asp-action="Register" asp-controller="Account" method="post">
        <div class="mb-3">
            <label asp-for="UserName">User Name:</label>
            <input asp-for="UserName" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Email">User Email:</label>
            <input type="email" asp-for="Email" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Password">User Password:</label>
            <input type="password" asp-for="Password" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="RePassword">User Password:</label>
            <input type="password" asp-for="RePassword" class="form-control"/>
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-user-plus"></i> Register
            </button>
        </div>
    </form>
</div>